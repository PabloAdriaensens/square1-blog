{% extends "./base.html.twig" %}

{% block body %}
    <div class="w-4/5 mx-auto py-12">
        <div class="border border-gray-300 rounded-md shadow-md">
            <div class="px-6 py-4">
                <h1 class="text-2xl font-bold text-gray-800 py-2">{{ post.title }}</h1>
                <p class="text-sm text-gray-800 py-4 leading-8 font-light">{{ post.publishedAt|date('F d, Y H:i:s') }}</p>
                <p class="text-base text-gray-800 leading-8 font-light">{{ post.description }}</p>
            </div>
        </div>

        <div class="mt-6">
            <a href="{{ path('posts') }}"
               class="bg-gray-800 hover:bg-gray-700 focus:ring-4 focus:outline-none focus:ring-gray-300 dark:focus:ring-gray-800 rounded-lg text-sm px-5 py-2 text-center text-white mt-4 inline-block">
                Back to Posts
            </a>
        </div>
    </div>
{% endblock %}